%nav.navbar.navbar-custom.navbar-fixed-top
  .container
    .navbar-header.page-scroll
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar",
                                      "aria-expanded" => "false",
                                      "data-target" => "#navbar",
                                      "data-toggle" => "collapse",
                                      :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand The Bookstore
    #navbar.collapse.navbar-collapse.navbar-main-collapse
      .navbar-left
        %ul.nav.navbar-nav
          %li
            %a{href: '/'} Home
          %li
            %a{href: '/shop'} Shop
      .navbar-right
        %ul.nav.navbar-nav
          %li.cart
            %a{href: "/cart"}
              = icon('shopping-cart')
              %strong Cart
              = (current_cart.size == 0 ? '(EMPTY)' : "(#{current_cart.size } items)")
          %li.active
            %a{href: "/settings"} Settings
          %li
            %a{href: "/orders"} Orders
          - if user_signed_in?
            %li
              %a{href: "/sign-out"} Sign Out
          - else
            %li
              %a{href: new_user_registration_path} Sign Up
            %li
              %a{href: new_user_session_path} Sign In
