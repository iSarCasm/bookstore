.container
  %h2
    Settings
  .row
    = html_for_errors flash.to_h.values, type: 'info'
    .col-sm-6
      %h3 Billing Address
      .col-sm-6
        = form_for(@billing_address, as: "user[billing_address]", url: registration_path(resource_name), html: { method: :put }) do |f|
          = render 'address/edit', f: f
    .col-sm-6
      %h3 Delivery Address
      .col-sm-6
        = form_for(@delivery_address,as: :delivery_address, url: registration_path(resource_name), html: { method: :put }) do |f|
          = render 'address/edit', f: f
  .row
    .col-sm-6
      %h3 Email
      = html_for_errors email_error_messages
      .col-sm-6
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          .field.form-group
            = f.label :email
            = f.email_field :email, class: 'form-control'
          .actions
            = f.submit 'Save', class: ['btn', 'btn-default']
    .col-sm-6
      %h3 Password
      = html_for_errors password_error_messages
      .col-sm-6
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          .field.form-group
            = f.label :current_password, 'Old Password'
            = f.password_field :current_password, class: 'form-control'
          .field.form-group
            = f.label :password, 'New Password'
            = f.password_field :password, class: 'form-control'
          .field.form-group
            = f.label :password_confirmation, 'Password Confirmation'
            = f.password_field :password_confirmation, class: 'form-control'
          .actions
            = f.submit 'Save', class: ['btn', 'btn-default']
  .row
    .col-xs-12
      %h3 Remove Account
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete }) do |f|
        .form-inline
          .actions.form-group
            = f.submit 'Please Remove My Account', class: ['btn', 'btn-danger']
          .form-group
            = check_box_tag :confirm
            = label_tag :confirm, "I understand all data will be lost."


